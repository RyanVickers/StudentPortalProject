@model StudentPortalProject.Models.Announcement

@{
	ViewData["Title"] = "Delete";
}

<div class="page-title-with-back-menu">
	<a asp-controller="Courses" asp-action="Details" asp-route-id="@Model.CourseId" class="">
		<i class="bi bi-chevron-left"></i>
		Cancel
	</a>
	<h1 class="">Delete Announcement</h1>
</div>

<h3>Are you sure you want to delete this?</h3>

<div class="card red-card">
	<div class="red-card-heading">
		<h5>@Html.DisplayFor(model => model.Title)</h5>
	</div>
	<div class="card-body">
		<p>@Html.DisplayFor(model => model.Message)</p>
	</div>
	<div class="card-footer">
		@Html.DisplayFor(model => model.Date)
	</div>
</div>

<form asp-action="Delete"class="container text-center m-5">
	<input type="hidden" asp-for="Id" />
	<input type="submit" value="Confirm" class="red-button" />
</form>
