@model Announcement

<div class="main-content">
<div class="page-title-with-back-menu">
	<a asp-controller="Courses" asp-action="Details" asp-route-id="@Model.CourseId" class="">
		<i class="bi bi-chevron-left"></i>
		Cancel
	</a>
	<h1 class="">New Announcement</h1>
</div>

<form asp-controller="Announcements" asp-action="Create">
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Title" class="control-label"></label>
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Message" class="control-label"></label>
				<input asp-for="Message" type="textarea" class="form-control" />
				<span asp-validation-for="Message" class="text-danger"></span>
			</div>
	<div class="text-center m-5">
		<button type="submit" class="blue-button btn">Create</button>
	</div>
</form>
</div>