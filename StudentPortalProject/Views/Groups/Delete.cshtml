@model StudentPortalProject.Models.Group

@{
	ViewData["Title"] = "Delete";
	var courseId = ViewBag.CourseId;
}
<div class="main-content">
	<div class="page-title-with-back-menu">
		<a asp-controller="Courses" asp-action="GroupList" asp-route-id="@courseId.SelectedValue" class="">
			<i class="bi bi-chevron-left"></i>
			Cancel
		</a>
		<h1 class="">Delete Group</h1>
	</div>

<h3>Are you sure you want to delete this?</h3>

	<div class="card red-card">
			<div class="red-card-heading">
			<h5>@Html.DisplayFor(model => model.GroupName)</h5>
			</div>
			<div class="card-body">
			<p>@Html.DisplayNameFor(model => model.Course)</p>
			</div>
	</div>

		
		<form asp-action="Delete" class="container text-center m-5">
			<input type="hidden" asp-for="Id"/>
			<input type="submit" value="Delete" class="red-button"/>
		</form>
	
</div>
