@model AddStudentsViewModel

@{
    ViewData["Title"] = "Add Students";
    var courseId = ViewBag.CourseId;
}
<div class="main-content">
<h1>Edit</h1>

<h4>Group</h4>
<hr />
<div class="row">
    <form asp-action="AddStudents">
        <input type="hidden" asp-for="CourseId" />
        <div class="form-group">
            <label>Select Students:</label>
            <select asp-for="SelectedStudents" asp-items="ViewBag.Students" multiple class="form-control"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-controller="Courses" asp-action="GroupList" asp-route-id="@courseId.SelectedValue">Back to List</a>
</div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
