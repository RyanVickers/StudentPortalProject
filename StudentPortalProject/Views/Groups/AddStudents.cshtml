@model AddStudentsViewModel

@{
    ViewData["Title"] = "Add Students";
    var courseId = ViewBag.CourseId;
    var groupId = ViewBag.GroupId;
}
<div class="main-content">
        <div class="page-title-with-back-menu">
        <a asp-controller="Courses" asp-action="GroupList" asp-route-id="@courseId.SelectedValue" class="">
                <i class="bi bi-chevron-left"></i>
                Cancel
            </a>
        <h1 class="">Add Students to Group</h1>
    </div>
<div class="row">
    <form asp-action="AddStudents">
        <input type="hidden" asp-for="CourseId" value="@groupId"/>
        <div class="form-group">
            <label>Select Students:</label>
            <select asp-for="SelectedStudents" asp-items="ViewBag.Students" multiple class="form-control"></select>
        </div>
        <div class="form-group text-center m-5">
            <input type="submit" value="Save" class="blue-button btn" />
        </div>
    </form>
</div>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
