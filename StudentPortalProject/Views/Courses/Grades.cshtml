@model List<StudentPortalProject.Models.GradesViewModel>

@{
    ViewData["Title"] = "Grades";
}

<div class="main-content">
    @await Html.PartialAsync("_CourseNavbar", Model.FirstOrDefault()?.Course)
    <h1>Grades</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Assignment</th>
                <th>Grade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.AssignmentName</td>
                    <td>@(item.Grade ?? 0)</td>
                </tr>
            }
        </tbody>
    </table>
</div>