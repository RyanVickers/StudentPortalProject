@model StudentPortalProject.Models.Course

@{
    ViewData["Title"] = "Delete";
}
<div class="main-content">
<div class="page-title-with-back-menu">
    <a asp-controller="Courses" asp-action="Index" class="">
        <i class="bi bi-chevron-left"></i>
        Cancel
    </a>
    <h1 class="">Delete Course</h1>
</div>

<h3>Are you sure you want to delete this?</h3>

<div class="card red-card">
    <div class="red-card-heading">
        <h5>@Html.DisplayFor(model => model.CourseName)</h5>
    </div>
    <div class="card-body">
        <p>@Html.DisplayFor(model => model.CourseDescription)</p>
    </div>
</div>

<form asp-action="Delete" class="container text-center m-5">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="red-button" />
</form>
</div>
